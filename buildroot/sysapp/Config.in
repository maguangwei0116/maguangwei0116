
menu "System Application"

comment "System Application"

config BR2_PACKAGE_SYSAPP
	bool "Build System Application"
	default y
	help
	  Enable this option if you want to build system application for your embedded device

if BR2_PACKAGE_SYSAPP

config BR2_SYSAPP_SOURCE_PATH
	string
	default "$(WORKSPACE)/sysapp"

config BR2_SYSAPP_INSTALL_PATH
	string "System Application Install Path"
	default "$(BASE_DIR)/system/bin"

source ".config_wrapper/sysapp_wrapper.in"

if BR2_CONFIG_SYSAPP_AGENT

menu "Agent Config Options"

config BR2_CFG_AGENT_OTA_ON
	bool "BR2_CFG_AGENT_OTA_ON"
	help
	  Enable this option if you want to get OTA upgrade feature in agent.
	  
config BR2_CFG_AGENT_BOOTSRRAP_ON
	bool "BR2_CFG_AGENT_BOOTSRRAP_ON"
	help
	  Enable this option if you want to get getbootstrap feature in agent.

config BR2_CFG_AGENT_PERSONALISE_ON
	bool "BR2_CFG_AGENT_PERSONALISE_ON"
	help
	  Enable this option if you want to get personalise feature in agent.
	  
endmenu

endif

endif

endmenu
