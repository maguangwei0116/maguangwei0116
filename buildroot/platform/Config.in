menu "Product Options"

config BR2_CFG_SYSTEM_NAME
	string "System Name"
	default "linux"

config BR2_CFG_PRODUCT_NAME
	string "Product Name"
	default "euicc"

config BR2_CFG_SOFTWARE_NAME
	string "Software Name"
	default "general"

choice
	prompt "Module Type"
	default BR2_CFG_OPEN_MODULE
	help
	  Set module type (open or standard)

config BR2_CFG_OPEN_MODULE
	bool "BR2_CFG_OPEN_MODULE"
	help
	  Open module. This is the default.

config BR2_CFG_STANDARD_MODULE
	bool "BR2_CFG_STANDARD_MODULE"
	help
	  Standard module.

endchoice

choice
	prompt "Build for Platform"
	default BR2_CFG_PLATFORM_9X07

config BR2_CFG_PLATFORM_X86
	bool "x86"
	help
	  Build for X86 platform.

config BR2_CFG_PLATFORM_9X07
	bool "9x07"
	help
	  Build for 9x07 platform

config BR2_CFG_PLATFORM_ANDROID_ARM32
	bool "android-arm32"
	select BR2_CFG_PLATFORM_ANDROID
	help
	  Build for android (ARM32) platform

config BR2_CFG_PLATFORM_ANDROID_ARM64
	bool "android-arm64"
	select BR2_CFG_PLATFORM_ANDROID
	help
	  Build for android (ARM64) platform

endchoice

config BR2_CFG_PLATFORM_ANDROID
	bool "Android"
	help
	  Build for android platform

choice
	prompt "Software Type"
	default BR2_CFG_SOFTWARE_TYPE_RELEASE
	help
	  Select software type, Release, Debug ...

config BR2_CFG_SOFTWARE_TYPE_RELEASE
	bool "Release"
	help
	  Compile software with Signature/Authentication.
	  This version used for final release.

config BR2_CFG_SOFTWARE_TYPE_DEBUG
	bool "Debug"
	help
	  Compile software debug version.
	  This version used for development stage.

endchoice

choice
	prompt "Environment Type"
	default BR2_CFG_ENV_TYPE_PROD
	help
	  Select environment type, staging, prod ...

config BR2_CFG_ENV_TYPE_PROD
	bool "prod"
	help
	  Running at product environment.

config BR2_CFG_ENV_TYPE_STAG
	bool "staging"
	help
	  Running at staging environment.

config BR2_CFG_ENV_TYPE_QA
	bool "qa"
	help
	  Running at qa environment.

endchoice

choice
	prompt "Mqtt Type"
	default BR2_CFG_DOWN_EMQ_MQTT_ENABLE
	help
	  Set mqtt type (mqtt or mqtts)

config BR2_CFG_DOWN_EMQ_MQTT_ENABLE
	bool "BR2_CFG_DOWN_EMQ_MQTT_ENABLE"
	help
	  mqtt type. This is the default.

config BR2_CFG_DOWN_EMQ_MQTTS_ENABLE
	bool "BR2_CFG_DOWN_EMQ_MQTTS_ENABLE"
	help
	  mqtts type.

endchoice

choice
	prompt "Http Type"
	default BR2_CFG_UPLOAD_HTTP_ENABLE
	help
	  Set http type (http or https)

config BR2_CFG_UPLOAD_HTTP_ENABLE
	bool "BR2_CFG_UPLOAD_HTTP_ENABLE"
	help
	  http type. This is the default.

config BR2_CFG_UPLOAD_HTTPS_ENABLE
	bool "BR2_CFG_UPLOAD_HTTPS_ENABLE"
	help
	  https type.

endchoice

config BR2_CFG_MODULE_TYPE
	string
	default "open"        		if BR2_CFG_OPEN_MODULE
	default "standard"     		if BR2_CFG_STANDARD_MODULE

config BR2_CFG_PLATFORM_TYPE
	string
	default "x86"               if BR2_CFG_PLATFORM_X86
	default "9x07"              if BR2_CFG_PLATFORM_9X07
	default "android-arm32"     if BR2_CFG_PLATFORM_ANDROID_ARM32
	default "android-arm64"     if BR2_CFG_PLATFORM_ANDROID_ARM64

config BR2_CFG_HTTP_TYPE
	string
	default "https"		    	if BR2_CFG_UPLOAD_HTTPS_ENABLE
	default "http"	        	if BR2_CFG_UPLOAD_HTTP_ENABLE

config BR2_CFG_MQTT_TYPE
	string
	default "mqtts"		    	if BR2_CFG_DOWN_EMQ_MQTTS_ENABLE
	default "mqtt"	        	if BR2_CFG_DOWN_EMQ_MQTT_ENABLE

config BR2_CFG_SOFTWARE_TYPE
	string
	default "debug"				if BR2_CFG_SOFTWARE_TYPE_DEBUG
	default "release"			if BR2_CFG_SOFTWARE_TYPE_RELEASE

config BR2_CFG_ENV_TYPE
	string
	default "prod"	        	if BR2_CFG_ENV_TYPE_PROD
	default "stag"				if BR2_CFG_ENV_TYPE_STAG
	default "qa" 				if BR2_CFG_ENV_TYPE_QA

config BR2_OUTPUT_PATH
	string "Output Path"
	default "$(BR2_CFG_SOFTWARE_NAME)-$(BR2_CFG_PLATFORM_TYPE)-$(BR2_CFG_SOFTWARE_TYPE)"

config BR2_IMAGE_NAME
	string "Image Name"
	default "$(BR2_CFG_SOFTWARE_NAME)-$(BR2_CFG_PLATFORM_TYPE)-$(BR2_CFG_SOFTWARE_TYPE)"

endmenu

