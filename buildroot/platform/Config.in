menu "Product Options"

config BR2_SYSTEM_NAME
	string "System Name"
	default "linux"

config BR2_PRODUCT_NAME
	string "Product Name"
	default "euicc"	
	
config BR2_SOFTWARE_NAME
	string "Software Name"
	default "general"
	
choice
	prompt "Build for Platform"
	default BR2_PLATFORM_9X07

config BR2_PLATFORM_X86
	bool "x86"
	help
	  Build for X86 platform.

config BR2_PLATFORM_9X07
	bool "9x07"
	help
	  Build for 9x07 platform

endchoice

config BR2_PLATFORM_TYPE
	string
	default "x86" 	if BR2_PLATFORM_X86
	default "9x07"  if BR2_PLATFORM_9X07

choice
	prompt "Software Type"
	default BR2_SOFTWARE_TYPE_RELEASE
	help
	  Select software type, Release, Debug ...

config BR2_SOFTWARE_TYPE_RELEASE
	bool "Release"
	help
	  Compile software with Signature/Authentication.
	  This version used for final release.

config BR2_SOFTWARE_TYPE_DEBUG
	bool "Debug"
	help
	  Compile software debug version.
	  This version used for development stage.

endchoice

config BR2_SOFTWARE_TYPE
	string
	default "debug"		if BR2_SOFTWARE_TYPE_DEBUG
	default "release"	if BR2_SOFTWARE_TYPE_RELEASE

config BR2_OUTPUT_PATH
	string "Output Path"
	default "$(BR2_SOFTWARE_NAME)-$(BR2_PLATFORM_TYPE)-$(BR2_SOFTWARE_TYPE)"

config BR2_IMAGE_NAME
	string "Image Name"
	default "$(BR2_SOFTWARE_NAME)-$(BR2_PLATFORM_TYPE)-$(BR2_SOFTWARE_TYPE)"

endmenu

